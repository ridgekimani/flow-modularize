{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "env": {
        "jest": true,       
        "mocha": true
    },
    "rules": {
        "no-use-before-define": 0,
        "react/jsx-filename-extension": [ 1, { "extensions": [ ".js", ".jsx" ]}],
        "react/prop-types": [1, { "ignore": ["navigation"] }],
        "react/prefer-stateless-function" : 1,
        "sort-imports": 1,
        "sort-keys": 1
    }
}